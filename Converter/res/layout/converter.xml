<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" 
  android:weightSum="1"
  android:background="@color/converter_background">
  
    <TextView android:text="	Convert..." 
    	android:id="@+id/lblConvert" 
    	android:textSize="16sp" 
    	android:layout_height="wrap_content" 
    	android:layout_weight="0.06" 
    	android:layout_width="match_parent"
    	android:layout_marginTop="10sp"
    	android:textColor="@color/converter_text">
    </TextView>
    
    <EditText android:id="@+id/edtStartValue" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content">
    </EditText>
    
    <TextView android:layout_weight="0.06" 
    	android:text="	From..." 
    	android:id="@+id/lblFrom" 
    	android:textSize="16sp"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10sp"
    	android:textColor="@color/converter_text">
    </TextView>
    
    <Spinner android:id="@+id/spnFrom" 
    	android:prompt="@string/spn_from_title"
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent"
    	android:layout_gravity="center">
    </Spinner>
    
    <TextView android:text="	To..." 
    	android:id="@+id/lblTo" 
    	android:textSize="16sp"
    	android:layout_height="wrap_content" 
    	android:layout_weight="0.06" 
    	android:layout_width="fill_parent"
    	android:layout_marginTop="10sp"
    	android:textColor="@color/converter_text">
    </TextView>
    
    <Spinner android:id="@+id/spnTo" 
    	android:prompt="@string/spn_to_title"
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content">
    </Spinner>
    
    <Button android:text="Convert" 
    	android:id="@+id/btnConvert"
    	android:layout_gravity="right" 
    	android:layout_width="154dp" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10sp">
    </Button>
    
    <TextView android:text="	Result..." 
    	android:id="@+id/lblResult" 
    	android:textSize="16sp"
    	android:layout_height="wrap_content" 
    	android:layout_weight="0.06" 
    	android:layout_width="fill_parent"
    	
    	android:textColor="@color/converter_text">
    </TextView>
    
    <EditText android:id="@+id/edtResult" 
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent" 
    	android:inputType="textMultiLine" 
    	android:maxLines="4"
    	android:focusable="false" >
    </EditText>
    
</LinearLayout>
