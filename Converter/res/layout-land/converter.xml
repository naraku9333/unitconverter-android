<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent">
  	<LinearLayout 
  		android:layout_width="fill_parent" 
  		android:layout_height="fill_parent" android:orientation="horizontal">
  		<TableLayout android:layout_width="match_parent" android:layout_height="270dp" android:layout_marginLeft="10sp" android:layout_marginRight="10sp">
  			<TableRow android:layout_width="fill_parent" 
  				android:id="@+id/tableRow1" android:layout_weight="1" android:layout_height="0dp">
  				<TextView android:text="	Convert..." 
    				android:id="@+id/lblConvert" 
    				android:textSize="16sp" 
    				android:layout_height="wrap_content" 
    				android:layout_weight="1" 
    				android:layout_marginTop="5sp"
    				android:layout_width="fill_parent">
    			</TextView>
    			<TextView android:layout_weight=".3" 
    				android:text="	From..." 
    				android:id="@+id/lblFrom" 
    				android:textSize="16sp"
    				android:layout_height="wrap_content"
    				android:layout_marginTop="5sp"
    				android:layout_marginLeft="20sp"
    				android:layout_width="fill_parent"
    				>
    			</TextView>
  				
  			</TableRow>
  			<TableRow android:layout_width="fill_parent" 
  				android:id="@+id/tableRow2" android:layout_weight="1" android:layout_height="wrap_content">
  				<EditText android:text="0" android:layout_width="fill_parent" android:id="@+id/edtStartValue" android:layout_height="wrap_content"
    				android:layout_weight="1" android:layout_marginTop="5sp">
    			</EditText>
			    <Spinner android:id="@+id/spnFrom" 
    				android:prompt="@string/spn_from_title"
    				android:layout_height="wrap_content"  
    				android:layout_width="fill_parent"
    				android:layout_weight=".3"
    				android:layout_marginTop="5sp"
    				android:layout_marginLeft="20sp">
    			</Spinner>
  			</TableRow >
  			<TableRow android:layout_width="fill_parent" 
  				android:id="@+id/tableRow3" android:layout_weight="1" android:layout_height="0dp">
  				<TextView android:text="	Result..." 
    				android:id="@+id/lblResult" 
    				android:textSize="16sp"
    				android:layout_height="wrap_content" 
    				android:layout_marginTop="5sp"
    				android:layout_weight="1" 
    				android:layout_width="fill_parent">
    			</TextView>
  				<TextView android:text="	To..." 
    				android:id="@+id/lblTo" 
    				android:textSize="16sp"
    				android:layout_height="wrap_content" 
    				android:layout_weight=".3" 
    				android:layout_marginTop="5sp"
    				android:layout_marginLeft="20sp"
    				android:layout_width="fill_parent">
    			</TextView>
    
    			
    		</TableRow>
    		<TableRow android:layout_width="fill_parent" 
  				android:id="@+id/tableRow4" android:layout_weight="1" android:layout_height="0dp">
    			<EditText android:id="@+id/edtResult" 
    				android:layout_height="wrap_content"
    				android:layout_width="fill_parent" 
    				android:inputType="textMultiLine" 
    				android:maxLines="4"
    				android:layout_weight="1"
    				android:layout_marginTop="5sp"
    				android:focusable="false" >
    			</EditText>
    			<Spinner android:id="@+id/spnTo" 
    				android:prompt="@string/spn_to_title"
    				android:layout_height="wrap_content" android:layout_width="fill_parent"
    				android:layout_marginTop="5sp"
    				android:layout_marginLeft="20sp"
    				android:layout_weight=".3">
    			</Spinner>
    			
    			
    		</TableRow>
    		<TableRow android:layout_height="wrap_content"
    			android:layout_width="fill_parent"
    			android:id="@+id/tableRow5">
    			<Button android:text="Convert" 
    				android:id="@+id/btnConvert"
    				android:layout_gravity="center" 
    				android:layout_height="wrap_content"
    				android:layout_marginTop="5sp" android:layout_width="wrap_content" android:layout_weight="1"
    				android:layout_marginLeft="60sp" android:layout_marginRight="60sp" >
    			</Button>
    			
    		</TableRow>
  		</TableLayout>
  		
  	</LinearLayout>
</LinearLayout>
